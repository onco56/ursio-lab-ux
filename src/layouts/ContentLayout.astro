// ContentLayout.astro
import BaseLayout from "./BaseLayout.astro";

const { title, date, intro } = Astro.props;
---

<BaseLayout>
  <article class="content-container">
    {title && <h1>{title}</h1>}

    {intro && (
      <p class="content-intro">{intro}</p>
    )}

    {date && (
      <p class="content-date">{date}</p>
    )}

    <slot />
  </article>
</BaseLayout>